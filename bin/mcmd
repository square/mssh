#!/usr/bin/env ruby

require_relative '../lib/cli'

cli = CommonCli.new( # defaults
  :maxflight => 200,
  :timeout => 60,
  :global_timeout => 0
)

cli.extra_options = lambda do |parser, options|
  parser.on('--noshell', "Don't invoke a shell. Args will be passed to exec verbatim ") do |arg|
    options[:noshell] = arg
  end
end

cli.parse ARGV

result = cli.runcmd do |cmd, _t|
  cli.options[:noshell] ? [cmd] : (['/bin/sh', '-c'].push cmd)
end

cli.output result
